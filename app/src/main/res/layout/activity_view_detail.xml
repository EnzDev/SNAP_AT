<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    tools:context="com.epsi.snap_at.view.ViewDetail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_detail_title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <View
            android:id="@+id/card_detail_status"
            android:background="@drawable/card_bubble_open"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintLeft_toRightOf="@+id/card_detail_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.046"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>